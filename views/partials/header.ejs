<!-- Limpiar el search -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const searchInput = document.querySelector(".search-input");

    searchInput.addEventListener("blur", function () {
      setTimeout(() => {
        if (!this.matches(":focus")) {
          this.value = "";
        }
      }, 100);
    });
  });
</script>
