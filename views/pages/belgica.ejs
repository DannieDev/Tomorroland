<%- include('../partials/header') %>

    <head>
        <!-- Estilos de la página Tomorrowland Bélgica -->
        <link rel="stylesheet" href="/css/belgica.css">
        <link rel="stylesheet" href="/css/migas_de_pan.css">
        <script src="/js/main.js"></script>
    </head>

    <div class="container">
        <!-- Contenedor para las migas de pan -->
        <div class="breadcrumb-wrapper">
            <div id="breadcrumb-placeholder"></div>
        </div>
        <div class="event-container">
            <a>TOMORROWLAND, BÉLGICA</a>
            <a href="#" class="event-button">Bienvenido</a>
            <a href="#" class="event-button">Pases y Paquetes</a>
            <a href="#" class="event-button">Información de ventas</a>
            <a href="#" class="event-button">Práctico</a>
            <a href="#" class="event-button">Preguntas más frecuentes</a>
        </div>

        <div class="hero">
            <div class="hero-content">
                <h1>BIENVENIDO</h1>
                <div class="dates">
                    <span>DEL 18 AL 20 DE JULIO DE 2025 <br> <small>FIN DE SEMANA 1</small></span>
                    <span>DEL 25 AL 27 DE JULIO DE 2025 <br> <small>FIN DE SEMANA 2</small></span>
                </div>
            </div>
        </div>

        <section class="tickets">
            <div class="ticket-item">
                <div class="content">
                    <h2>VENTA DE ENTRADAS EN TODO EL MUNDO</h2>
                    <p class="date">1 DE FEBRERO DE 2025 - 17:00 CET</p>
                    <p class="description">Pases para festivales y alojamiento en DreamVille</p>
                </div>
                <div class="cta">
                    <button class="btn">PRE-INSCRIPCIÓN</button>
                </div>
            </div>

            <div class="ticket-item">
                <div class="content">
                    <h2>PREVENTA MUNDIAL</h2>
                    <p>Pases para festivales y alojamiento en DreamVille</p>
                    <span class="sold">AGOTADO</span>
                </div>
            </div>

            <div class="ticket-item">
                <div class="content">
                    <h2>PAQUETES DE VIAJE DE GLOBAL JOURNEY</h2>
                    <p>Pases y transporte oficial</p>
                    <span class="sold">AGOTADO</span>
                </div>
            </div>
        </section>

        <section class="discover">
            <h2>Descubrir</h2>
            <div class="discover-grid">
                <div class="discover-card">
                    <img src="/img/Festival.jpg" alt="Pases y Paquetes">
                    <div class="overlay">
                        <h2>Pases y Paquetes</h2>
                        <p>Descubre todos los tipos de entradas disponibles para Tomorrowland Belgium 2025.</p>
                        <button class="btn">MÁS INFORMACIÓN</button>
                    </div>
                </div>
                <div class="discover-card">
                    <img src="/img/Festival1.jpg" alt="Esto es Tomorrowland">
                    <div class="overlay">
                        <h2>Esto es Tomorrowland</h2>
                        <p>Más información sobre Tomorrowland Bélgica, DreamVille, Global Journey y el mundo de
                            Tomorrowland.</p>
                        <button class="btn">MÁS INFORMACIÓN</button>
                    </div>
                </div>
                <div class="discover-card">
                    <img src="/img/Festival2.jpg" alt="Información de ventas">
                    <div class="overlay">
                        <h2>Información de ventas</h2>
                        <p>Descubre cuándo y cómo puedes comprar pases y paquetes para Tomorrowland Bélgica 2025.</p>
                        <button class="btn">MÁS INFORMACIÓN</button>
                    </div>
                </div>
            </div>
        </section>
        <%- include('../partials/footer') %>
    </div>