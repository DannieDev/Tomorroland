<%- include('../partials/header') %>

    <head>
        <!-- Estilos de la página Tomorrowland Bélgica -->
        <link rel="stylesheet" href="/css/belgica.css">
        <link rel="stylesheet" href="/css/migas_de_pan.css">
        <script src="/js/main.js"></script>
        <title>Bélgica</title>
    </head>

    <div class="container">
        <!-- Contenedor para las migas de pan -->
        <div class="breadcrumb-wrapper">
            <div id="breadcrumb-placeholder"></div>
        </div>
        <div class="event-container">
            <a>TOMORROWLAND, BÉLGICA</a>
            <% navContent.forEach(item=> { %>
                <a href="<%= item.url %>" class="event-button">
                    <%= item.titulo %>
                </a>
                <% }); %>
        </div>

        <div class="hero">
            <div class="hero-content">
                <h1>
                    <%= tituloPrincipal ? tituloPrincipal.titulo : "BIENVENIDOS" %>
                </h1>
                <div class="dates">
                    <% fechas.forEach(fecha=> { %>
                        <span>
                            <%= fecha.descripcion %> <br> <small>
                                    <%= fecha.titulo %>
                                </small>
                        </span>
                        <% }); %>
                </div>
            </div>
        </div>

        <section class="tickets">
            <% if (boletos.length> 0) { %>
                <% boletos.forEach(boleto=> { %>
                    <div class="ticket-item">
                        <div class="content">
                            <h2>
                                <%= boleto.titulo %>
                            </h2>
                            <% if (boleto.fecha_evento) { %>
                                <p class="date">
                                    <%= new Date(boleto.fecha_evento).toLocaleDateString('es-ES', { day: '2-digit' ,
                                        month: 'long' , year: 'numeric' }) %>
                                </p>
                                <% } %>
                                    <p class="description">
                                        <%- boleto.descripcion %>
                                    </p>
                        </div>
                        <div class="cta">
                            <% if (boleto.estado && boleto.estado.toLowerCase().trim()==="disponible" ) { %>
                                <button class="btn">PRE-INSCRIPCIÓN</button>
                                <% } else { %>
                                    <span class="sold">AGOTADO</span>
                                    <% } %>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p>No hay boletos disponibles en este momento.</p>
                            <% } %>
        </section>

        <!-- Sección "Discover" dinámica -->
        <section class="discover">
            <h2>Descubrir</h2>
            <div class="discover-grid">
                <% descubrir.forEach(item=> { %>
                    <div class="discover-card">
                        <img src="<%= item.rutaImagen %>" alt="<%= item.titulo %>">
                        <div class="overlay">
                            <h2>
                                <%= item.titulo %>
                            </h2>
                            <p>
                                <%- item.descripcion %>
                            </p>
                            <a href="<%= item.url %>" class="btn">MÁS INFORMACIÓN</a>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </section>
        <%- include('../partials/footer') %>
    </div>